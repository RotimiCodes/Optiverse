<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_left_page_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_left_page_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/select_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAppearance="@style/head"

        app:layout_constraintTop_toTopOf="parent"

        android:text="Select User Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:src="@drawable/welcome_page_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_text" />


    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/individual_button"
        android:layout_width="333dp"
        android:layout_height="137dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/person_ic"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="INDIVIDUAL CUSTOMERS"
        android:fontFamily="@font/sequel_sans_medium_body"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/corporate_button"
        android:layout_width="333dp"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/briefcase"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="BUSINESS"
        android:fontFamily="@font/sequel_sans_medium_body"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/individual_button" />


</androidx.constraintlayout.widget.ConstraintLayout>